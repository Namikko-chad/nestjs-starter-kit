  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "nest build",
    "start:backend": "nest start backend",
    "start:backend:dev": "nest start backend --watch",
    "format": "prettier --write ./apps './*.{cjs,md}' ./tsconfig.json",
    "lint": "eslint --fix .",
    "sync": "node ./dist/libs/tools/src/database/prepare_schemas.js && node ./dist/libs/tools/src/database/sync.js",
    "migrations": "node ./dist/libs/tools/src/database/prepare_schemas.js && npx typeorm migration:run -t=each --config ./apps/backend/ormconfig.json",
    "seeds": "node ./dist/libs/tools/src/seeds/seed.run.js ./apps/backend/ormconfig.json",
    "test": "jest",
    "test:band": "jest --runInBand",
    "test:cov": "jest --coverage",
    "release:major": "npm version major && conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md && git commit -m 'docs: changelog' && git push origin && git push origin --tags",
    "release:minor": "npm version minor && conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md && git commit -m 'docs: changelog' && git push origin && git push origin --tags",
    "release:patch": "npm version patch && conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md && git commit -m 'docs: changelog' && git push origin && git push origin --tags",
    "prepare": "[ \"$NODE_ENV\" = production ] && exit 0; husky install"
  }
